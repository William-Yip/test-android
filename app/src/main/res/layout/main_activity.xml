<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView_state_name"
        android:layout_width="1000dp"
        android:layout_height="2500dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"
        android:text="{Nome do Estado}"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_second_no"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="Nome da capital"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/editText_input_user"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="90dp"
        android:inputType="text"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView_feedback"
        android:layout_width="1400dp"
        android:layout_height="1000dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="150dp"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView_score"
        android:layout_width="1400dp"
        android:layout_height="25dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="370dp"
        android:text="Pontuacao atual: 0"
        android:textSize="20dp"
        android:textStyle="bold" />
    <!-- button for run add logic and view result -->

    <Button
        android:id="@+id/check_answer_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp"
        android:text="Conferir resposta" />

    <Button
        android:id="@+id/next_round_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="280dp"
        android:text="Proximo round" />

</RelativeLayout>
